{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "module": "ES2015",
    "target": "ES2015",
    "moduleResolution": "Node",
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["jest"],
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.*"
  ],
  "include": ["src/**/*"],
}
